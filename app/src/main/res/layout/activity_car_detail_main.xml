<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".VehicleDetailsFragment">

    <TextView
        android:id="@+id/txtMakeModel"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:text="@string/make_model" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:layout_toLeftOf="@id/txtPrice"/>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/_0_00"
        android:textAlignment="viewEnd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end" />

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_below="@id/txtMakeModel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-3dp"
        android:text="Description" />

    <TextView
        android:id="@+id/last_update"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@id/txtDetails"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="-3dp"
        android:text="Description" />

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/txtPrice"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/vehicle_image"
        android:src="@drawable/car_cartoon_image"
        android:layout_alignParentRight="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="Home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>