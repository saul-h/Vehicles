<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".VehicleDetailsFragment">

    <TextView
        android:id="@+id/txtMakeModel"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="@string/make_model"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:layout_toLeftOf="@id/txtPrice"/>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/_0_00"
        android:textAlignment="viewEnd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end" />

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="Description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtMakeModel"/>

    <TextView
        android:id="@+id/txtLastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Updated: "
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtDetails"/>

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/txtPrice"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/vehicle_image"
        android:src="@android:drawable/stat_notify_error"
        android:layout_alignParentRight="true" />
</RelativeLayout>